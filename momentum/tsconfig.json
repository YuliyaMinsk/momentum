{
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
  },
  "files": [
    "src/index.ts",
    "src/module.d.ts"
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
